@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "Index";
}

<h1>All Users Information</h1>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Phone</th>
            <th>EmailConfirmed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.UserName</td>
            <td>@user.PhoneNumber</td>
            <td>@user.EmailConfirmed</td>
            <td><form asp-controller="Administrator" asp-action="Delete" asp-route-userId=@user.Id method="post" role="form"><button type="submit">Remove</button></form></td>
        </tr>
        }
    </tbody>
</table>

