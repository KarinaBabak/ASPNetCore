@model IEnumerable<NorthwindSystem.Data.DTOModels.CategoryDto>

    @{
    ViewData["Title"] = "Index";
    }

    <h1>Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Picture</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td><img src='@Url.Action("GetImage", new {categoryId = category.Id})' alt="" /></td>
                @*<td><a asp-action="GetImage" asp-route-imageId=@category.Id>Open Image</a></td>*@
                <td><a asp-action="Update" asp-route-categoryId=@category.Id>Edit</a></td>
            </tr>
        }
        </tbody>
    </table>

